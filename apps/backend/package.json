  },
  "devDependencies": {
    "@types/big.js": "~6.2.2",
    "@types/node": "~22.18",
    "concurrently": "~9.2.1",
    "eslint-config-custom-node": "*",
    "nb-knex": "*",
    "nb-lockup": "*",
    "nb-logger": "*",
    "nb-near": "*",
