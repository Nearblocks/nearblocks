{
  "name": "backend",
  "version": "0.1.0",
  "author": "NearBlocks",
  "license": "Business Source License 1.1",
  "type": "module",
  "imports": {
    "#*": [
      "./dist/*.js"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "yarn clean && tsc",
    "start": "node build/src/index.js",
    "dev": "nodemon --exec \"yarn build && yarn start\" --watch src --ext ts",
    "lint": "tsc --noEmit && eslint ./ --fix",
    "lint:check": "tsc --noEmit && eslint ./",
    "migrate": "NODE_ENV=production knex migrate:latest",
    "seed": "NODE_ENV=production knex seed:run"
  },
  "dependencies": {
    "@sentry/node": "7.10.0",
    "@sentry/tracing": "7.10.0",
    "axios": "1.6.0",
    "big.js": "6.2.1",
    "bree": "9.1.2",
    "dayjs": "1.11.4",
    "knex": "2.1.0",
    "lodash-es": "4.17.21",
    "p-map": "5.5.0",
    "pg": "8.7.3",
    "pino": "8.1.0"
  },
  "devDependencies": {
    "@types/big.js": "~6.1",
    "@types/lodash-es": "~4.17",
    "@types/node": "~16",
    "eslint-config-custom-node": "*",
    "knex-migrate-sql-file": "~2.0",
    "nb-tsconfig": "*",
    "nodemon": "~2.0",
    "pino-pretty": "~8.1",
    "rimraf": "~3.0",
    "typescript": "~5.2"
  }
}
