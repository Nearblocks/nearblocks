# Network (mainnet or testnet)
# Automatically sets Neardata URL:
#   mainnet → https://mainnet.neardata.xyz
#   testnet → https://testnet.neardata.xyz
NETWORK=mainnet

# Cache Configuration
CACHE_MAX_BLOCKS=5000
CACHE_TTL_MS=3600000

# Disk Cache (Optional)
ENABLE_DISK_CACHE=false
DISK_CACHE_PATH=/tmp/block-cache

# NEAR Lake (Optional - for fallback to NEAR Lake)
LAKE_AWS_ACCESS_KEY_ID=
LAKE_AWS_SECRET_ACCESS_KEY=

# Server Configuration
PORT=3000

# S3 Configuration
S3_BUCKET=nearblocks-mainnet
S3_ENDPOINT=https://s3.example.com
S3_REGION=auto
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key

# S3 Upload Configuration
ENABLE_S3_UPLOAD=true
S3_UPLOAD_BATCH_SIZE=10
S3_UPLOAD_MAX_RETRIES=5

# Sentry Configuration (Optional)
SENTRY_DSN=
